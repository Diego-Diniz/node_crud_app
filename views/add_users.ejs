<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-dark">
                    <h5 class="text-light">Nova Ocorrência</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="categoria">Categoria</label>
                            <select name="categoria" class="form-control form-control-lg" required>
                                <option value="">Selecione uma categoria</option>
                                <option value="Incidente com dano material">Incidente com dano material</option>
                                <option value="Incidente com dano ambiental">Incidente com dano ambiental</option>
                                <option value="Near Miss">Near Miss</option>
                                <option value="NIF">NIF</option>
                                <option value="RIF">RIF</option>
                                <option value="LTCF">LTCF</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="secao">Seção</label>
                            <input type="text" name="secao" class="form-control form-control-lg" placeholder="Enter Section" required/>
                        </div>
                        <div class="mb-3">
                            <label for="supervisor">Supervisor</label>
                            <input type="text" name="supervisor" class="form-control form-control-lg" placeholder="Enter Supervisor" required/>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg" required/>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Salvar" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>